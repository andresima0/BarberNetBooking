@*
  Layout da área administrativa
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BarberNet — Admin</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
<header class="container header">
    <div class="brand">
        <img src="/img/logo.png" alt="BarberNet" class="logo" />
        <h1>Admin</h1>
    </div>
    <nav>
        <a href="/Admin">Dashboard</a>
        <a href="/Admin/Appointments">Agendamentos</a>
        <a href="/Admin/Services">Serviços</a>
        <a href="/Admin/Barbers">Barbeiros</a>
        <a href="/Admin/Availability">Disponibilidade</a>
        <a href="/Admin/Settings">Configurações</a>
        <a href="/Admin/Logout">Sair</a>
    </nav>
</header>
<main class="container">
    @RenderBody()
</main>
<footer class="container foot">
    <small>© @DateTime.Now.Year BarberNet — Área Administrativa</small>
</footer>
</body>
</html>