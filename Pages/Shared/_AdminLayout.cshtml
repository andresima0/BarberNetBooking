@*
  Layout da área administrativa (herda do _Layout.cshtml principal)
*@
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<!-- CSS do Flatpickr -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="admin-container">
    <nav class="admin-tabs">
        <a asp-page="/Admin/Index" 
           class="@(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Index" ? "active" : "")">
            Dashboard
        </a>
        <a asp-page="/Admin/Appointments/Index" 
           class="@(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Appointments") == true ? "active" : "")">
            Agendamentos
        </a>
        <a asp-page="/Admin/Services/Index" 
           class="@(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Services") == true ? "active" : "")">
            Serviços
        </a>
        <a asp-page="/Admin/Barbers/Index" 
           class="@(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Barbers") == true ? "active" : "")">
            Barbeiros
        </a>
        <a asp-page="/Admin/Availability/Index" 
           class="@(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Availability") == true ? "active" : "")">
            Disponibilidade
        </a>
        <a asp-page="/Admin/Settings/Index" 
           class="@(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Settings") == true ? "active" : "")">
            Configurações
        </a>
    </nav>

    <div class="admin-content">
        @RenderBody()
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}