@using BarberNetBooking.Data
@inject AppDbContext Db
@using Microsoft.EntityFrameworkCore

@{
    // Lê branding do banco
    var branding = Db.ShopInfos.AsNoTracking().FirstOrDefault();
    var siteName = string.IsNullOrWhiteSpace(branding?.SiteName) ? "BarberNet" : branding!.SiteName!;


    var logoPath = !string.IsNullOrWhiteSpace(branding?.LogoPath)
        ? branding!.LogoPath
        : Url.Content("~/uploads/branding/logo.png");

    
    // Cache-busting para mudanças do logo
    var logoUrl = $"{logoPath}?v={(branding?.UpdatedAt.Ticks.ToString() ?? "0")}";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>@ViewData["Title"] - @siteName</title>

    <!-- Estilos globais -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <!-- CSS do Flatpickr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    @RenderSection("Styles", required: false)
</head>
<body>
@{
    // Verifica se é admin via cookie
    var isAdmin = Context?.Request?.Cookies["bn_admin"] == "ok";
    var currentPath = ViewContext?.HttpContext?.Request?.Path.Value?.ToLowerInvariant() ?? "/";
    var isAdminArea = currentPath.StartsWith("/admin");
}

<header class="topbar">
    <div class="container topbar-inner">
        <div class="brand">
            <a asp-page="/Index" class="brand-link">
                <img src="@logoUrl" alt="@siteName" class="logo"/>
                <span class="brand-name">@siteName</span>
            </a>
        </div>

        <nav class="tabs">
            <a asp-page="/Index" class="@(currentPath == "/" ? "active" : "")">
                Agendar
            </a>
            @if (isAdmin)
            {
                <a asp-page="/Admin/Index" class="@(isAdminArea ? "active" : "")">
                    Admin
                </a>
                <a asp-page="/Admin/Logout">
                    Sair
                </a>
            }
            else
            {
                <a asp-page="/Admin/Login" class="@(currentPath == "/admin/login" ? "active" : "")">
                    Entrar (Admin)
                </a>
            }
            
            <button type="button" class="theme-toggle" id="themeToggle" aria-label="Alternar tema">
                <span class="icon" id="themeIcon">🌙</span>
            </button>

        </nav>
    </div>
</header>

<main class="container">
    @RenderBody()
</main>

<footer class="site-footer">
    <div class="container foot-inner">
        <p>&copy; @DateTime.Now.Year @siteName — Todos os direitos reservados</p>
    </div>
</footer>

<!-- Scripts globais -->
<script src="~/js/site.js" asp-append-version="true"></script>

<!-- JS do Flatpickr -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/pt.js"></script>

<script>
  (function() {
    const key = 'bn-theme';
    const root = document.documentElement;
    const btn  = document.getElementById('themeToggle');
    const icon = document.getElementById('themeIcon');

    // aplica tema salvo
    const saved = localStorage.getItem(key);
    if (saved === 'light') root.setAttribute('data-theme','light');
    updateIcon();

    btn?.addEventListener('click', () => {
      const isLight = root.getAttribute('data-theme') === 'light';
      if (isLight) {
        root.removeAttribute('data-theme');
        localStorage.setItem(key, 'dark');
      } else {
        root.setAttribute('data-theme','light');
        localStorage.setItem(key, 'light');
      }
      updateIcon();
    });

    function updateIcon(){
      const isLight = root.getAttribute('data-theme') === 'light';
      icon.textContent = isLight ? '☀️' : '🌙';
      btn.setAttribute('aria-label', isLight ? 'Tema claro' : 'Tema escuro');
      btn.setAttribute('title', isLight ? 'Tema claro' : 'Tema escuro');
    }
  })();
</script>

@RenderSection("Scripts", required: false)
</body>
</html>