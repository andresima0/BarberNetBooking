@model BarberNetBooking.Models.Service

<div class="mb-3">
    <label asp-for="Name" class="form-label">Nome do Serviço</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Price" class="form-label">Preço</label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="DurationMinutes" class="form-label">Duração (minutos)</label>
    <select asp-for="DurationMinutes" class="form-control">
        <option value="15">15 minutos</option>
        <option value="30">30 minutos</option>
        <option value="45">45 minutos</option>
        <option value="60">1 hora</option>
        <option value="75">1 hora e 15 min</option>
        <option value="90">1 hora e 30 min</option>
        <option value="105">1 hora e 45 min</option>
        <option value="120">2 horas</option>
    </select>
    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
</div>

<div class="form-check mb-3">
    <input asp-for="IsActive" class="form-check-input" />
    <label asp-for="IsActive" class="form-check-label">Ativo</label>
</div>